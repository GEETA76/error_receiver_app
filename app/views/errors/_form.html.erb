<%= form_with(model: error) do |form| %>
  <% if error.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(error.errors.count, "error") %> prohibited this error from being saved:</h2>

      <ul>
        <% error.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :error_class, style: "display: block" %>
    <%= form.text_field :error_class %>
  </div>

  <div>
    <%= form.label :message, style: "display: block" %>
    <%= form.textarea :message %>
  </div>

  <div>
    <%= form.label :backtrace, style: "display: block" %>
    <%= form.textarea :backtrace %>
  </div>

  <div>
    <%= form.label :path, style: "display: block" %>
    <%= form.text_field :path %>
  </div>

  <div>
    <%= form.label :method, style: "display: block" %>
    <%= form.text_field :method %>
  </div>

  <div>
    <%= form.label :timestamp, style: "display: block" %>
    <%= form.datetime_field :timestamp %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
